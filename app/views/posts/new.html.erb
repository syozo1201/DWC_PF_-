<div class="topic">
  <div class="container">
    <h1 class="mt-4 topic-font">新規投稿</h1>
  </div>
</div>

<div class="container">
  <div class="main">
    <div class="form-wrap">
    <%= render "posts/errors", post: @post %>
　　<%= form_with model: @post, url: posts_path, local:true do |f| %>
　　  <div class="form-group mb-4">
        <%= f.label :post_image, "画像", class: "font-weight-bold" %>
        <%= f.attachment_field :post_image, class: "input" %>
      </div>

      <div class="form-group mb-4">
        <%= f.label "タイトル", class: "font-weight-bold mb-2" %><br />
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group mb-4">
        <%= f.label "本文", class: "font-weight-bold" %><br />
        <%= f.text_field :post_content, class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "投稿する", class: "btn btn-primary btn-shadow w-100" %>
      </div>
    <% end %>
    </div>
  </div>
</div>