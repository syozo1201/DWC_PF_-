<div class="topic">
  <div class="container">
    <h1 class="mt-4 topic-font">投稿一覧ページ</h1>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-3">
        <%= link_to attachment_image_tag(post, :post_image, fallback: "no-image.jpg", size:"220x220", class: "d-block mx-auto"),  post_path(post)%>
        <div class="card-body">
          <h5 class="card-title"><%= truncate(post.title, length: 8) %></h5>
          <p class="card-text"><%= truncate(post.post_content, length: 20) %></p>
          <%= link_to "詳細をみる", post_path(post), class: "btn btn-primary btn-shadow btn-lg d-block mx-auto" %>
          <% if post.favorited_by?(current_user) %>
            <div>
              <%= link_to post_favorites_path(post), method: :delete do %>
                ♥<%= post.favorites.count %> いいね
              <% end %>
            </div>
            <% else %>
            <div>
              <%= link_to post_favorites_path(post), method: :post do %>
                ♡<%= post.favorites.count %> いいね
              <% end %>
            </div>
          <% end %>
          <div><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
