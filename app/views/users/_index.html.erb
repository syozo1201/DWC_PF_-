<% if users.blank? %>
  <h4 class="mt-3">ユーザーはいません。<h4>
<% else %>
  <table class="table table-striped mt-4 table-sm">
    <thread>
      <tr>
        <th class="text-left"></th>
        <th>Name</th>
        <th></th>
      </tr>
    </thread>
    <tbody>
      <% users.each do |user| %>
        <tr id="user_<%= user.id %>">
          <td class="text-left align-bottom">
             <%= link_to user_path(user.id) do %>
               <%= attachment_image_tag user, :profile_image, :fill, 35, 35, format: 'jpeg', fallback: "no-image.jpg", size: "35x35", class:"rounded-circle shadow-sm"; %>
             <% end %>
          </td>
          <td class="align-bottom">
            <%= link_to user_path(user.id) do %>
              <%= user.name %>
            <% end %>
          </td>
          <td class="align-bottom">
            <span class="follow-btn">
              <%= render '/relationships/follow_btn', user: user %>
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<div class="row">
  <div class="mx-auto mt-2 h2">
    <%#= paginate users %>
  </div>
</div>